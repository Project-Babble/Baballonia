<UserControl
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="Baballonia.Views.MainView"
    x:DataType="viewModels:MainViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:converters="clr-namespace:Baballonia.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:Baballonia.Models"
    xmlns:viewModels="clr-namespace:Baballonia.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.DataContext>
        <viewModels:MainViewModel />
    </Design.DataContext>

    <SplitView
        Background="{DynamicResource SystemChromeLowColor}"
        CompactPaneLength="45"
        DisplayMode="CompactInline"
        IsPaneOpen="{Binding IsPaneOpen}"
        OpenPaneLength="300">
        <SplitView.Pane>
            <StackPanel
                HorizontalAlignment="Stretch"
                Orientation="Vertical"
                Spacing="5"
                VerticalAlignment="Top">
                <Image
                    IsVisible="False"
                    Margin="1,9,1,1"
                    MaxHeight="24"
                    MaxWidth="24"
                    MinHeight="24"
                    MinWidth="24"
                    Source="/Assets/IconOpaque_32x32.png"
                    VerticalAlignment="Center"
                    x:Name="ApplicationSidePanelLogo" />
                <Button
                    Background="#00ffffff"
                    Command="{Binding TriggerPaneCommand}"
                    Height="32"
                    HorizontalAlignment="Left"
                    Margin="7,10"
                    Width="32">
                    <PathIcon Data="{StaticResource LineHorizontal3Regular}" Height="11" />
                </Button>
                <ListBox
                    ItemsSource="{Binding Items}"
                    Margin="0,0,-100,0"
                    Padding="0"
                    SelectedItem="{Binding SelectedListItem}">
                    <ListBox.Styles>
                        <Style Selector="ListBox">
                            <Setter Property="Background" Value="#00000000" />
                        </Style>
                        <Style Selector="ListBoxItem">
                            <Setter Property="Padding" Value="12 8" />
                        </Style>
                    </ListBox.Styles>
                    <ListBox.ItemTemplate>
                        <DataTemplate DataType="{x:Type models:ListItemTemplate}">
                            <StackPanel
                                Background="#00000000"
                                Orientation="Horizontal"
                                Spacing="17"
                                VerticalAlignment="Center">
                                <PathIcon
                                    Background="#00000000"
                                    Data="{Binding IconKey, Converter={x:Static converters:TypeConverters.IconConverter}}"
                                    Margin="3,0,0,0"
                                    VerticalAlignment="Center"
                                    Width="16" />
                                <TextBlock Background="#00ffffff" Text="{Binding Label}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </SplitView.Pane>

        <SplitView.Content>
            <Border
                Background="{DynamicResource SystemChromeMediumColor}"
                CornerRadius="16 0 0 0"
                Padding="5"
                x:Name="ViewContainer">
                <TransitioningContentControl Content="{Binding CurrentPage}" />
            </Border>
        </SplitView.Content>
    </SplitView>
</UserControl>
